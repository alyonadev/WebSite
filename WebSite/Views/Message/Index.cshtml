@{
    ViewBag.Title = "Сообщения";
}

<h1>Сообщения</h1>

<div>
    @foreach (var user in Model)
    {
        <a href="@Url.Action("Chat", "Message", new { id = user.UserId })" class="msg-usr">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        @if (user.Photo == null)
                        {
                            <img src="~/img/defaultPhoto.jpg" class="msg-usr-img" />
                        }
                        else
                        {
                            <img src="@user.PhotoUrl" class="msg-usr-img" />
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@user.Surname @user.Name</h5>
                            <p class="card-text">Age: @user.Age</p>
                            <p class="card-text"><small class="text-muted">Address: @user.Address</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
</div>







